<div class="container apply col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12">

  <h1>Apply</h1>

  <form action="/apply" method="post">
    <label>Name</label><br>
    <input type="text" name="name" class="form-control" placeholder="Name"></input>
    <label>Contact Email</label><br>
    <input type="email" name="email" class="form-control" placeholder="your@email.com"></input>
    <label>Password</label><br>
    <input type="password" name="password" class="form-control" placeholder="password"></input>

    <hr>
    <input type="submit" class="btn btn-success" value="Register"></input>
    <br>
  </form>
</div>
